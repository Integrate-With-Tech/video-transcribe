{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Transcribe batch",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/transcribe_batch.py",
      "console": "integratedTerminal",
      "args": [
        "--input","input_mp4",
        "--output","outputs",
        "--model","large-v3",
        "--language","en",
        "--compute-type","int8_float16",
        "--threads","1",
        "--beam","5",
        "--summarizer","bart",
        "--summary-max","8"
      ],
      "env": { "PYTHONUNBUFFERED":"1" }
    }
  ]
}
